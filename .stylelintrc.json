{
  "extends": ["stylelint-config-tailwindcss"],
  "ignoreFiles": ["dist/**/*", "node_modules/**/*"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "plugin",
          "utility",
          "theme",
          "custom-variant"
        ]
      }
    ],
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": ["theme"]
      }
    ]
  }
}
