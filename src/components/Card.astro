---
import { Image } from "astro:assets";

interface Props {
  label: string;
  href: string;
  imgSrc: string;
}

const { label, href, imgSrc } = Astro.props;
---

<li
  class="card relative flex flex-col rounded-lg border border-transparent p-1"
>
  <div class="order-1">
    <h3>
      <a href={href} class="hover:no-underline">{label}</a>
    </h3>
  </div>
  <div>
    <Image
      src={imgSrc}
      alt={label}
      class="rounded-3xl"
      widths={[600, 1200]}
      sizes="600px"
      inferSize
    />
  </div>
</li>

<style>
  .card:focus-within {
    @apply border-muted-foreground;
  }

  a::after {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
  }

  a:focus {
    outline: none;
  }
</style>
