---
import Detail from "@/components/Detail.astro";
import { caseStudies } from "@/resources/case-studies";

const caseStudy = caseStudies[1];
---

<Detail
  title={caseStudy.label}
  highlights={caseStudy.highlights}
  sections={caseStudy.sections}
  previous={{ label: "Skippy Nut Roll", href: "#" }}
  next={{ label: "Skippy Nut Roll", href: "#" }}
>
  <Fragment slot="description">
    <caseStudy.description />
  </Fragment>
</Detail>
