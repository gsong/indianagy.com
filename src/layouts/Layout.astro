---
import "@fontsource/alice";
import "@fontsource-variable/work-sans";

import alice from "@fontsource/alice/files/alice-latin-400-normal.woff2?url";
import workSans from "@fontsource-variable/work-sans/files/work-sans-latin-wght-normal.woff2?url";

import "@/styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={alice}
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={workSans}
      crossorigin="anonymous"
    />
    <meta name="generator" content={Astro.generator} />
    <title>India Nagy's Portfolio</title>
  </head>

  <body>
    <header class="site-width mb-1 py-4 md:mb-3">
      <nav
        class="flex items-baseline justify-between"
        aria-label="primary navigation"
      >
        <a href="/" class="font-serif text-3xl hover:no-underline lg:text-5xl"
          >India Nagy</a
        >
        <ul class="flex gap-x-3.5 md:text-xl">
          <li>
            <a href="#">Work</a>
          </li>
          <li>
            <a href="#">About</a>
          </li>
          <li>
            <a href="/contact">Contact</a>
          </li>
        </ul>
      </nav>
    </header>
    <slot />
  </body>
</html>
