---
import "../styles/reset.scss";
import "../styles/global.scss";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="India Nagy’s professional website" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="center-horizontal stack-small">
    <header class="center-horizontal">
      <h1>India Nagy<span class="sr-only">’s Professional Website</span></h1>
      <nav>
        <ul>
          <li>
            <a href="/#skills">My Skills</a>
          </li>
          <li>
            <a href="/#case-studies">Case Studies</a>
          </li>
          <li>
            <a href="/#about">About</a>
          </li>
          <li>Contact</li>
        </ul>
      </nav>
    </header>

    <slot />
  </body>
</html>
